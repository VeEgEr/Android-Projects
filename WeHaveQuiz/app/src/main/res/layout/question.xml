<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/back"
    tools:context=".Quiz"
    >

    <TextView
        android:id="@+id/question_textview"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:background="#ffff"
        android:layout_centerHorizontal="true"
        android:text="adasdas?"
        android:textSize="20dp"
        android:textColor="#000000"
        />

    <Button
        android:id="@+id/answer_one_button"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="#ffff"
        android:layout_centerHorizontal="true"
        android:text="adasdas?"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/question_textview"
        android:onClick="answerControllerOnClick"
        />

    <Button
        android:id="@+id/answer_two_button"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="#ffff"
        android:layout_centerHorizontal="true"
        android:text="adasdas?"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/answer_one_button"
        android:onClick="answerControllerOnClick"
        />
    <Button
        android:id="@+id/answer_three_button"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="#ffff"
        android:layout_centerHorizontal="true"
        android:text="adasdas?"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/answer_two_button"
        android:onClick="answerControllerOnClick"
        />

    <Button
        android:id="@+id/answer_four_button"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="#ffff"
        android:layout_centerHorizontal="true"
        android:text="adasdas?"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/answer_three_button"
        android:onClick="answerControllerOnClick"
        />

    <Button
        android:id="@+id/answer_five_button"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="#ffff"
        android:layout_centerHorizontal="true"
        android:text="adasdas?"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/answer_four_button"
        android:onClick="answerControllerOnClick"
        />
    <TextView

    android:layout_marginTop="30dp"
    android:id="@+id/nextQuestionTime"
    android:layout_below="@id/answer_five_button"
    android:layout_width="wrap_content"
    android:textSize="50dp"
    android:layout_centerHorizontal="true"
    android:layout_height="wrap_content" />

    <TextView
        android:text="0"
    android:layout_marginLeft="90dp"
    android:layout_marginTop="30dp"
    android:id="@+id/trueAnswer"
    android:layout_toRightOf="@+id/nextQuestionTime"
    android:layout_below="@id/answer_five_button"
    android:layout_width="wrap_content"
    android:textSize="50dp"
    android:layout_centerHorizontal="true"
    android:layout_height="wrap_content" />
    <TextView
        android:text="0"
        android:layout_marginRight="90dp"
        android:layout_marginTop="30dp"
        android:id="@+id/falseAnswer"
        android:layout_toLeftOf="@+id/nextQuestionTime"
        android:layout_below="@id/answer_five_button"
        android:layout_width="wrap_content"
        android:textSize="50dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />
    <TextView
        android:text="True Answer"
        android:textStyle="bold"
        android:layout_marginLeft="270dp"
        android:id="@+id/trueAnswer_text"
        android:layout_below="@id/falseAnswer"
        android:layout_width="wrap_content"
        android:textSize="20dp"

        android:layout_height="wrap_content" />

    <TextView
        android:text="False Answer"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:id="@+id/falseAnswer_text"
        android:layout_width="wrap_content"
        android:textSize="20dp"

        android:layout_height="wrap_content"
        android:layout_below="@+id/falseAnswer"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp" />
    <ProgressBar
        android:max="10"
        style="?android:attr/progressBarStyleHorizontal"
        android:indeterminate="false"
        android:id="@+id/progressBar"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/nextQuestionTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>