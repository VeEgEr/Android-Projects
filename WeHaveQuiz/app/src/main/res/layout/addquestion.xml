<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/add_question_layout"

    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".QuestionsProgress"


    >
    <Spinner

        android:layout_centerHorizontal="true"
        android:id="@+id/category_spinner_add"
        android:layout_width="300dp"
        android:layout_height="40dp"/>



    <LinearLayout
        android:background="@mipmap/gribackground"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:id="@+id/mrLinear"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/add_question_Button">

        <EditText
            android:background="@mipmap/gribackground2"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:textAlignment="center"
            android:hint="Please write question."
            android:id="@+id/question_editText" />

        <EditText
            android:background="@mipmap/gribackground2"
            android:textAlignment="center"
            android:layout_marginLeft="25dp"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint="Please write optionOne"
            android:id="@+id/add_question_optionOne"
            />
        <EditText
            android:background="@mipmap/gribackground2"
            android:textAlignment="center"
            android:layout_marginLeft="25dp"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint="Please write optionTwo"
            android:id="@+id/add_question_optionTwo"
            />
        <EditText
            android:background="@mipmap/gribackground2"
            android:textAlignment="center"
            android:layout_marginLeft="25dp"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint="Please write optionThree"
            android:id="@+id/add_question_optionThree"
            />
        <EditText
            android:background="@mipmap/gribackground2"
            android:textAlignment="center"
            android:layout_marginLeft="25dp"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint="Please write optionFour"
            android:id="@+id/add_question_optionFour"
            />
        <EditText
            android:background="@mipmap/gribackground2"
            android:textAlignment="center"
            android:layout_marginLeft="25dp"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint="Please write aswer"
            android:id="@+id/add_question_answer"
            />
        <EditText
            android:hint="Please write question Number"
            android:background="@mipmap/gribackground2"
            android:textAlignment="center"
            android:layout_marginLeft="25dp"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:id="@+id/questionNumber_editText"/>

    </LinearLayout>
    <Button
        android:onClick="addSingleQuestion"
        android:id="@+id/add_question_Button"
        android:text="Add"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/mrLinear"
        android:background="@mipmap/buttongri"
        android:layout_width="300dp"
        android:layout_height="80dp" />

</RelativeLayout>