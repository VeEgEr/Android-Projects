<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.veyisegemenerden.wehavequiz.Categories"
    android:background="@mipmap/gribackground">


    <ImageView
        android:id="@+id/generalknowledge"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/knowledge"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:onClick="categoriesOnClicked"
        />


    <ImageView
        android:id="@+id/science"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/bilim"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/generalknowledge"
        android:onClick="categoriesOnClicked"
        />

    <ImageView
        android:id="@+id/geography"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/cografya3"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/generalknowledge_textview"
        android:onClick="categoriesOnClicked"
        />

    <ImageView
        android:id="@+id/history"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/history"
        android:layout_below="@+id/science_textview"
        android:layout_toRightOf="@+id/geography"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="40dp"
        android:onClick="categoriesOnClicked"
        />

    <ImageView
        android:id="@+id/art"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/art1"
        android:layout_below="@+id/geography_textview"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:onClick="categoriesOnClicked"/>

    <ImageView
        android:id="@+id/sport"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/sport"
        android:layout_toRightOf="@+id/art"
        android:layout_below="@+id/history_textview"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="40dp"
        android:onClick="categoriesOnClicked"/>

    <TextView
        android:id="@+id/generalknowledge_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="General Knowledge"
        android:layout_below="@+id/generalknowledge"
        android:layout_alignLeft="@+id/generalknowledge"
        android:layout_alignStart="@+id/generalknowledge"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:textSize="15dp"
        />


    <TextView
        android:id="@+id/art_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Art"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_below="@+id/art"
        android:layout_alignLeft="@+id/geography_textview"
        android:layout_alignStart="@+id/geography_textview"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:textSize="15dp"
        />

    />

    <TextView
        android:id="@+id/sport_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sport"
        android:layout_below="@+id/sport"
        android:layout_alignRight="@+id/sport"
        android:layout_alignEnd="@+id/sport"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:layout_marginRight="40dp"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/geography_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Geography"
        android:layout_below="@+id/geography"
        android:layout_alignRight="@+id/geography"
        android:layout_alignEnd="@+id/geography"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/science_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Science"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_below="@+id/science"
        android:layout_alignRight="@+id/science"
        android:layout_alignEnd="@+id/science"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp" />

    <TextView
        android:id="@+id/history_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_below="@+id/history"
        android:layout_alignRight="@+id/history"
        android:layout_alignEnd="@+id/history"
        android:layout_marginRight="33dp"/>

</RelativeLayout>
